<div class="container">

  <%= simple_form_for([@page,@offer], html: { class: 'form-horizontal' }) do |f| %>
      <% if @offer.errors.any?  %>
          <div id="error_explanation">
            <h2><%= pluralize(@offer.errors.count, "error") %>prohibited this post from being saved</h2>

            <ul>
              <% @offer.errors.full_messages.each do |message|  %>
                  <li><%= message %></li>
              <% end %>

            </ul>
          </div>

      <% end %>

      <div class="field">
        <%= f.input :name  %>
      </div>
      <div class="field">
        <%= f.input :discount  %>
      </div>
      <div class="field">
        <%= f.input :price_old  %>
      </div>
      <div class="field">
        <%= f.input :price  %>
      </div>
      <div class="field">
        <%= f.input :button_text  %>
      </div>
      <div class="field">
        <%= f.label :image %><br>
        <%= f.file_field :image %>
      </div>
      <div class="actions">
        <%= f.button :submit %>
      </div>
  <% end %>

</div>
