<h1>Вырезать изображение</h1>
<%= javascript_include_tag "offers" %>
<div class="row"  style="width: 100%; height: 100%; margin: 0 auto; overflow:hidden;">
  <%= image_tag @offer.image_url(:large), id: "cropbox" %>
</div>


<h4>Предпросмотр</h4>
<div class="row">
  <div style="width:150px; height:150px; overflow:hidden; margin: 0 auto;">
    <%= image_tag @offer.image.large , :id => "preview" %>
  </div>
</div>

<div class="row">
  <%= simple_form_for([@page,@offer],multipart:true, class: 'form-horizontal' ) do |f| %>
  <%#= form_for @offer do |f| %>
      <% %w[x y w h].each do |attribute| %>
          <%= f.input "crop_#{attribute}", as: :hidden %>
          <%#= f.input "crop_#{attribute}" %>

<% end %>
      <div class="actions">
        <%= f.button :submit, "Сохранить изображение", class: "btn-success btn-lg" %>
      </div>
  <% end %>
</div>