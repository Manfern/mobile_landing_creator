<div class="container text-center">
<%= form_tag update_all_page_offers_path, class: "form-inline",multipart: true, method: :put do  %>
    <% @offers.each do |offer| %>
        <%#= simple_fields_for "offers[]", offer, html: {multipart: true } do |f| %>
          <%= simple_fields_for "offers[]", offer, class: 'form-horizontal' ,multipart: true do |f| %>
              <% if offer.errors.any?  %>
                  <div id="error_explanation">
                    <h2><%= pluralize(offer.errors.count, "error") %>prohibited this post from being saved</h2>
                    <ul>
                      <% offer.errors.full_messages.each do |message|  %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>
            <h2><%= offer.name %></h2>
    <div class="form-group">
            <div class="field">
              <%= f.input_field :name, class: "form-control"  %>
            </div>
            <div class="field">
              <%= f.input_field :discount, class: "form-control"  %>
            </div>
            <div class="field">
              <%= f.input_field :price_old, class: "form-control"  %>
            </div>
            <div class="field">
              <%= f.input_field :price, class: "form-control"  %>
            </div>
            <div class="field">
              <%= f.input_field :button_text, class: "form-control"  %>
            </div>
            <div class="field fileinput ">
              <%= f.label :image %><br>
              <div class="fileinput fileinput-new ">
                <%= f.input_field :image, class: "btn btn-default btn-file" %>
              </div>
            </div>
    </div>
    <% end %>
  <% end %>
    <div class="actions">
      <%= submit_tag "Обновить предложения",class: "btn btn-default" %>
    </div>
<% end %>
</div>