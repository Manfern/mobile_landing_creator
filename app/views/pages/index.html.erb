

<div class="container text-center ">
  <div class="header">
  <h1><%= @page.title %></h1>
    <div class="logo">
      <img src="" alt="">
    </div>
    <p><%= @page.offer %></p>
    <div class="btn btn-success">
      <div class="span">Заказать!</div>
    </div>



    <hr>
  </div>
  <div class="offers">

    <% @offers.each do |offer| %>

        <%= link_to 'Редактировать', edit_page_offer_url(offer, page_id: 1) %>
        <div class="offer">
          <h3><%= offer.name %></h3>
          <span class="discount"><%= offer.discount %></span>
              <div class="price">
                <div class="price_old">
                  <%= offer.price_old %>
                </div>
                <div class="price_new">
                  <%= offer.price %>
                </div>
              </div>
          <div class="btn btn-success"><%= offer.button_text %></div>
          <hr>
        </div>
    <% end %>
  </div>
  <div class="feedbacks">
    <% @feedbacks.each do |feedback| %>
        <div class="feedback">
          <p><%= feedback.description %></p>
          <span><b><%= feedback.author %></b></span>
          <hr>
        <% end %>
    </div>
  </div>

 <div class="advantages">
    <% @advantages.each do |advantage| %>
      <div class="advantage">
        <p><%= advantage.description %></p>
      </div>
       <hr>
    <% end %>
 </div>
  <div class="footer">

      <a href=""><p text-center><%=@page.footer_text %></p></a>
  </div>
</div>

<%#= @pages.each do |page| %>
<%#= page.title %>
<%# end %>

