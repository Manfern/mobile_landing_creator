
<% @edit_name=[" оффер "," преимущесто ", " отзыв "]%>
<div class="container text-center ">

  <div class="header">
  <h1><%= @page.title %></h1>
    <div class="logo">
      <img src="" alt="">
    </div>
    <p><%= @page.offer %></p>
    <div class="btn btn-success">
      <div class="span">Заказать!</div>
    </div>


  </div>
  <div class="offers">
    <%= form_tag edit_all_page_offers_path(page_id: @page.id), method: :get do %>
    <% @offers.shuffle.each do |offer| %>
        <hr>
        <div class="add_for_edit_check">
          <span><%= check_box_tag "offer_ids[]", offer.id %>Добавить <%=@edit_name[0] %>для редактирования </span>
        </div>
        <%#= link_to 'Редактировать оффер', edit_page_offer_path(@page, offer) %>
        <div class="offer">
          <span class="discount"><%= offer.discount %></span>
          <h3><%= offer.name %></h3>
          <div class="img"><%= image_tag offer.image.normal %></div>
              <div class="price">
                <div class="price_old">
                  <%= offer.price_old %>
                </div>
                <div class="price_new">
                  <%= offer.price %>
                </div>
              </div>
          <div class="btn btn-success"><%= offer.button_text %></div>
        </div>
    <% end %>
    <%= submit_tag "Редактировать блок", class:"btn btn-info edit_block" %>
    <% end %>
  </div>
  <div class="feedbacks">
    <%= form_tag edit_all_page_feedbacks_path(page_id:@page.id), method: :get do %>
    <% @feedbacks.shuffle.each do |feedback| %>

        <div class="feedback">
          <hr>
          <div class="add_for_edit_check">
            <span><%= check_box_tag "feedback_ids[]", feedback.id %>Добавить <%=@edit_name[2] %>для редактирования </span>
          </div>
          <p><%= feedback.description %></p>
          <span><b><%= feedback.author %></b></span>
        <% end %>
      <%= submit_tag "Редактировать блок", class:"btn btn-info edit_block" %>
    <% end %>
    </div>
  </div>

 <div class="advantages">
   <%= form_tag edit_all_page_advantages_path(page_id:@page.id), method: :get do %>
   <%#= link_to 'Редактировать блок', edit_page_path %>
    <% @advantages.shuffle.each do |advantage| %>
       <hr>
       <div class="add_for_edit_check">
         <span><%= check_box_tag "advantage_ids[]", advantage.id %>Добавить <%=@edit_name[1] %>для редактирования </span>
       </div>
      <div class="advantage">
        <p><%= advantage.description %></p>
      </div>
    <% end %>
    <%= submit_tag "Редактировать блок", class:"btn btn-info edit_block" %>
   <% end %>
 </div>
  <div class="footer">

      <a href=""><p text-center><%=@page.footer_text %></p></a>
  </div>
</div>

<%#= @pages.each do |page| %>
<%#= page.title %>
<%#= page.title %>
<%# end %>

